<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <import type="android.view.View" />

        <variable
            name="adapter"
            type="woowacourse.paint.view.ColorSelectionAdapter" />

        <variable
            name="viewModel"
            type="woowacourse.paint.view.MainViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <woowacourse.paint.view.CanvasView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/layout_controller_buttons"
            app:lineColor="@{viewModel.selectedColor.getArgbColor()}"
            app:lineWidth="@{viewModel.selectedWidth}" />

        <com.google.android.material.slider.Slider
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:valueFrom="0"
            android:valueTo="100"
            app:value="@={viewModel.selectedWidth}"
            app:layout_constraintBottom_toTopOf="@id/rv_color_selection"
            android:visibility="@{viewModel.widthControllerVisible ? View.VISIBLE : View.GONE}"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_color_selection"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:adapter="@{adapter}"
            android:orientation="horizontal"
            android:visibility="@{viewModel.colorControllerVisible ? View.VISIBLE : View.GONE}"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            app:layout_constraintBottom_toTopOf="@id/layout_controller_buttons"
            tools:listitem="@layout/item_color" />

        <include
            android:id="@+id/layout_controller_buttons"
            layout="@layout/item_controller_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:colorVisibilityChangeListener="@{viewModel}"
            app:widthVisibilityChangeListener="@{viewModel}" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
